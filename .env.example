# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/database_name"

# ============================================
# AWS S3 CONFIGURATION
# ============================================
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="your-bucket-name"
AWS_ACCESS_KEY_ID="your-access-key-id"
AWS_SECRET_ACCESS_KEY="your-secret-access-key"

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="7d"

# ============================================
# SMTP EMAIL CONFIGURATION
# ============================================
HOST_EMAIL="smtp.example.com"
PORT_EMAIL="587"
SMTP_USER="your-smtp-username"
SMTP_PASSWORD="your-smtp-password"
SMTP_FROM="Malet <noreply@malet.app>"

# ============================================
# REDIS CONFIGURATION (Para mensajería multi-servidor)
# ============================================
# Si REDIS_HOST está configurado, el sistema usará Redis para PubSub
# Si está vacío o no existe, usará InMemory (solo para desarrollo)
#
# Para configurar Redis en tu homelab Proxmox, consulta:
# docs/REDIS_PROXMOX_SETUP.md

REDIS_HOST="0.0.0.0"           # IP de tu servidor Redis (ej: 192.168.1.50)
REDIS_PORT="6379"       # Puerto de Redis (default: 6379)
REDIS_PASSWORD=""       # Contraseña de Redis (recomendado configurar)
REDIS_DB="0"            # Base de datos de Redis (default: 0)

# ============================================
# WEBSOCKET CONFIGURATION
# ============================================
WS_CORS_ORIGIN="*"      # Orígenes permitidos para WebSocket (ej: https://malet.app)
                        # En producción, especifica tu dominio exacto

# ============================================
# APPLICATION
# ============================================
PORT="4005"             # Puerto de la aplicación
NODE_ENV="development"  # development | production

